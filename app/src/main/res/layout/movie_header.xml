<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#eeeeee">

        <ImageView
            android:id="@+id/iv_th"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_tickethouse" />

        <TextView
            android:id="@+id/tv_tickethouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_th"
            android:text="实时票房"
            android:textColor="#2c2c2c"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_bigpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="20522.2万"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_todaybigpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/tv_bigpan"
            android:text="今日大盘"
            android:textColor="#2c2c2c"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>