<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ct_icon"
        android:layout_width="42dp"
        android:layout_height="42dp" />

    <TextView
        android:id="@+id/ct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ct_icon"
        android:textColor="@color/colorBig"
        android:textSize="13sp" />

    <RatingBar
        android:id="@+id/ct_star"
        style="@style/MyRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/ct_icon"
        android:numStars="5" />

    <TextView
        android:id="@+id/ct_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/ct_star"
        android:textColor="@color/colorYellow"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:src="@drawable/icon_more" />

    <TextView
        android:id="@+id/ct_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ct_icon"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/colorBig"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/ct_comment"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/ct_icon">

        <TextView
            android:id="@+id/ct_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorSmall"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/ct_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorSmall"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/ct_comment_num_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/ct_comment_num"
            android:src="@drawable/icon_comment" />

        <TextView
            android:id="@+id/ct_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@id/ct_comment_num_icon"
            android:textColor="@color/colorSmall"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/ct_zan_num_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/ct_zan_num"
            android:src="@drawable/icon_zan" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_bottom"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ct_icon"
        android:background="#ddd" />

</RelativeLayout>